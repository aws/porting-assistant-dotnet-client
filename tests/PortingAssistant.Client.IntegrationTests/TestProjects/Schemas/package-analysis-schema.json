{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Schema for Porting Assistant package analysis json output",
  "additionalProperties": false,

  "type": "array",
  "items": {
    "anyOf": [
      {
        "type": "object",
        "properties": {
          "PackageVersionPair": {
            "$ref": "#/$defs/PackageVersionPair"
          },
          "CompatibilityResults": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "Compatibility": {
                  "enum": [
                    "COMPATIBLE",
                    "DEPRACATED",
                    "INCOMPATIBLE",
                    "UNKNOWN"
                  ],
                  "type": "string"
                },
                "CompatibleVersions": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "Recommendations": {
            "type": "object",
            "properties": {
              "RecommendedActions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "PackageId": {
                      "type": "string"
                    },
                    "RecommendedActionType": {
                      "enum": [
                        "NoRecommendation",
                        "ReplaceApi",
                        "ReplaceNamespace",
                        "ReplacePackage",
                        "UpgradePackage"
                      ],
                      "type": "string"
                    },
                    "Description": {
                      "type": [
                        "null",
                        "string"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      },
      {
        "type": "object",
        "properties": {
          "PackageVersionPair": {
            "$ref": "#/$defs/PackageVersionPair"
          },
          "Error": {
            "type": "string"
          }
        }
      }
    ]
  },
  "$defs": {
    "PackageVersionPair": {
      "type": "object",
      "properties": {
        "PackageId": {
          "type": "string"
        },
        "Version": {
          "type": "string"
        },
        "PackageSourceType": {
          "enum": [
            "SDK",
            "NUGET",
            "PORTABILITY_ANALYZER",
            "RECOMMENDATION",
            "PRIVATE"
          ]
        }
      }
    }
  }
}